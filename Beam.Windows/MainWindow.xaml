<Window x:Class="Beam.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beam" Height="600" Width="900" 
        Background="{StaticResource BrushDark}" 
        FontFamily="Segoe UI Semibold">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Border Background="{StaticResource BrushSurface}" Padding="20,15" BorderBrush="#4A3B35" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="BEAM" FontSize="22" Foreground="{StaticResource BrushPrimary}" FontWeight="ExtraBold"/>
                    <Border Background="#22D97757" CornerRadius="12" Padding="10,2" Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="StatusText" Text="Starting..." Foreground="{StaticResource BrushPrimary}" FontSize="12" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
                <TextBlock x:Name="IpText" Grid.Column="1" Text="Local IP: --" Foreground="{StaticResource BrushTextDim}" VerticalAlignment="Center" FontSize="12"/>
            </Grid>
        </Border>

        <!-- Chat Area -->
        <ListBox x:Name="ChatList" Grid.Row="1" Background="Transparent" BorderThickness="0" Padding="10" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="14" Padding="12,10" Margin="0,6" MaxWidth="550"
                            HorizontalAlignment="{Binding IsMe, Converter={StaticResource BooleanToAlignmentConverter}}"
                            Background="{Binding IsMe, Converter={StaticResource BooleanToColorConverter}}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="{Binding Content}" Foreground="White" TextWrapping="Wrap" FontSize="14" LineHeight="20"/>
                            <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm}" Foreground="#CCF1F5F9" FontSize="10" HorizontalAlignment="Right" Margin="0,4,0,0" Opacity="0.7"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Modern Input Area -->
        <Border Grid.Row="2" Background="{StaticResource BrushSurface}" Padding="15" BorderBrush="#4A3B35" BorderThickness="0,1,0,0" AllowDrop="True" Drop="Border_Drop" DragOver="Border_DragOver">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="ðŸ“Ž" Width="40" Background="Transparent" BorderThickness="0" Foreground="{StaticResource BrushTextDim}" FontSize="18" Click="Attach_Click" ToolTip="Attach File"/>
                <TextBox Grid.Column="1" x:Name="InputBox" Style="{StaticResource ModernTextBox}" 
                         Tag="Type a message or drop a file..." KeyDown="InputBox_KeyDown" Margin="10,0,0,0"/>
                <Button Grid.Column="2" Content="Send" Style="{StaticResource ModernButton}" Margin="12,0,0,0" Click="Send_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
