<Window x:Class="Beam.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beam - Local Chat" Height="450" Width="800" Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#2D2D30" Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Beam" FontSize="20" Foreground="#007ACC" FontWeight="Bold"/>
                <TextBlock x:Name="StatusText" Text="Starting..." Foreground="#AAAAAA" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <TextBlock x:Name="IpText" Text="IP" Foreground="#888888" VerticalAlignment="Center" Margin="15,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Chat Area -->
        <ListBox x:Name="ChatList" Grid.Row="1" Background="#1E1E1E" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="10" Padding="10" Margin="5" MaxWidth="500"
                            HorizontalAlignment="{Binding IsMe, Converter={StaticResource BooleanToAlignmentConverter}}"
                            Background="{Binding IsMe, Converter={StaticResource BooleanToColorConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding Content}" Foreground="White" TextWrapping="Wrap" FontSize="14"/>
                            <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm}" Foreground="#888888" FontSize="10" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Input Area -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="10" AllowDrop="True" Drop="Border_Drop" DragOver="Border_DragOver">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="InputBox" Background="#3E3E42" Foreground="White" BorderThickness="0" Padding="10" FontSize="14" 
                         VerticalContentAlignment="Center" KeyDown="InputBox_KeyDown"
                         Tag="Type a message or drop a file..."/>
                <Button Grid.Column="1" Content="Send" Margin="10,0,0,0" Padding="20,5" Background="#007ACC" Foreground="White" 
                        BorderThickness="0" Click="Send_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
